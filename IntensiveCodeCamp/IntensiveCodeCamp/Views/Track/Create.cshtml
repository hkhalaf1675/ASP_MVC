@model IntensiveCodeCamp.Models.Entities.Track
@{
    ViewBag.Title = "Create Track";
    Layout = "~/Views/Shared/_SharedLayout.cshtml";
}

<h2>Create Track</h2>

@using (Html.BeginForm(method: FormMethod.Post, actionName: "Create", controllerName: "Track"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group ">
        @Html.LabelFor(T => T.Name)
        @Html.EditorFor(T => T.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(T => T.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group ">
        @Html.LabelFor(T => T.IntakeRound)
        @Html.DropDownList("IntakeRound", null, new { @class = "form-control" })
    </div>
    <input type="submit" value="Add" class="btn btn-success w-100" />
}
@section ValidationScripts{
    @Scripts.Render("~/ClientSideValidationScripts")
}
