@model List<IntensiveCodeCamp.Models.Entities.Course>

@if (Model?.Count > 0)
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Course Name</th>
            <th>Max Dgree</th>
            <th>Min Dgree</th>
        </tr>
        @foreach (IntensiveCodeCamp.Models.Entities.Course course in Model)
        {
            <tr>
                <td>@course.ID</td>
                <td>@course.Name</td>
                <td>@course.MaxDgree</td>
                <td>@course.MinDgree</td>
            </tr>
        }
    </table>
}
else
{ 
<div class="alert alert-dismissible alert-secondary">
    <strong>There is no courses on that track</strong> click <a href="/Course/Create" class="alert-link">here</a> to add new course
</div>
}