@model List<IntensiveCodeCamp.Models.Entities.Course>
@{
    ViewBag.Title = "All Courses";
    Layout = "~/Views/Shared/_SharedLayout.cshtml";
}

<h2 class="text-center">All Courses</h2>
@if (TempData["AddedCourse"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["AddedCourse"]</strong> was added successfully.
    </div>
}
@if (TempData["UpdatedCourse"] != null)
{
    <div class="alert alert-dismissible alert-primary">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["UpdatedCourse"]</strong> was Upadted successfully.
    </div>
}
@if (TempData["DeletedCourse"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>@TempData["DeletedCourse"]</strong> was Deleted successfully.
    </div>
}
@if (Model?.Count > 0)
{
    @Html.ActionLink("Create New Course", "Create", "Course", new { @class = "btn btn-success w-100" })
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Max dgree</th>
            <th>Min dgree</th>
            <th>Track</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (IntensiveCodeCamp.Models.Entities.Course course in Model)
        {
            <tr>
                <td>@course.ID</td>
                <td>@course.Name</td>
                <td>@course.MaxDgree</td>
                <td>@course.MinDgree</td>
                <td>@course.Track.Name</td>
                <td>
                    @Html.ActionLink("Update", "Update", new { id = course.ID }, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = course.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-dismissible alert-secondary">
        <strong>There is no courses</strong> click <a href="/Course/Create" class="alert-link">here</a> to add new course
    </div>
}

